@{
  Layout="_Layout";
}
@using HairSalon.Models

<h1>Stylists</h1>
@if (Model.Count == 0)
{
  <h3>No stylists have been added.</h3>
}
else
{
  <ul class="border list-unstyled w-50 mx-auto">
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add Stylist", "Create")</p>