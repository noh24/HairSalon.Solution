@{
  Layout="_Layout";
}
@model HairSalon.Models.Client

<h1>Add Client Info</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add Client">
}
<p><strong>NOTE:</strong> You need to have at least one stylist before you can add an client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to create a category.</p>