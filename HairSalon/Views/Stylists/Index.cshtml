@{
  Layout="_Layout";
}
@using HairSalon.Models
<div class="w-2/3 flex flex-col items-center">
  <h1 class="text-5xl py-10">Stylists</h1>
  @if (Model.Count == 0)
  {
    <p class="text-xl">There are no stylists.</p>
  }
  else
  {
    <table class="text-lg capitalize w-full text-center overflow-auto shadow-inner border-b-2 border-neutral-50">
      @foreach(Stylist stylist in Model)
      {
        <tr class="even:bg-slate-50">
          <td class="py-3 hover:font-bold font-semibold">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</td>
        </tr>
      }
    </table>
  }
<p class="text-md border rounded-full mt-5 px-3 py-1 bg-slate-50 hover:bg-slate-300 hover:border-slate-300 border-slate-50 hover:text-white shadow-md">@Html.ActionLink("Add Stylist", "Create")</p>
</div >
